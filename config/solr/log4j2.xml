<!-- Default production configuration is asnychronous logging -->
<Configuration>
  <Appenders>
    <Console name="TEXT" target="SYSTEM_OUT">
      <PatternLayout>
        <Pattern>
          %maxLen{%d{ISO8601} %highlight([%-5p]) (%t) [%X{collection} %X{shard} %X{replica} %X{core}] %c{1.} %m%notEmpty{ =>%ex{short}}}{10240}%n
        </Pattern>
      </PatternLayout>
    </Console>

    <Console name="JSON" target="SYSTEM_OUT">
        <JsonTemplateLayout />
    </Console>

    <RollingRandomAccessFile
        name="SlowLogFile"
        fileName="${sys:solr.log.dir}/solr_slow_requests.log"
        filePattern="${sys:solr.log.dir}/solr_slow_requests.log.%i" >
      <PatternLayout>
        <Pattern>
          %maxLen{%d{ISO8601} %-5p (%t) [%X{collection} %X{shard} %X{replica} %X{core}] %c{1.} %m%notEmpty{ =>%ex{short}}}{10240}%n
        </Pattern>
      </PatternLayout>
      <Policies>
        <OnStartupTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="32 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingRandomAccessFile>

  </Appenders>
  <Loggers>
    <!-- Use <AsyncLogger/<AsyncRoot and <Logger/<Root for asynchronous logging or synchonous logging respectively -->
    <AsyncLogger name="org.apache.hadoop" level="warn"/>
    <AsyncLogger name="org.apache.solr.update.LoggingInfoStream" level="off"/>
    <AsyncLogger name="org.apache.zookeeper" level="warn"/>
    <!-- HttpSolrCall adds markers denoting the handler class to allow fine grained control, metrics are
         very noisy so by default the metrics handler is turned off to see metrics logging set DENY to ACCEPT -->
    <AsyncLogger name="org.apache.solr.servlet.HttpSolrCall" level="warn">
      <MarkerFilter marker="org.apache.solr.handler.admin.MetricsHandler" onMatch="DENY" onMismatch="ACCEPT"/>
    </AsyncLogger>
    <AsyncLogger name="org.apache.solr.core.SolrCore.SlowRequest" level="info" additivity="false">
      <AppenderRef ref="SlowLogFile"/>
    </AsyncLogger>

    <AsyncRoot level="${env:LOG_LEVEL:-INFO}">
      <AppenderRef ref="${env:LOG_FORMAT:-TEXT}"/>
    </AsyncRoot>
  </Loggers>
</Configuration>