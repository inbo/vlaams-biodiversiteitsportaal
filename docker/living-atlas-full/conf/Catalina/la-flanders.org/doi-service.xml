<?xml version="1.0" encoding="UTF-8"?>
<!-- doi-service -->
<Context reloadable="false">

    <Parameter name="spring.config.additional-location"
               value="file:/config/config/common/common.yml,file:/config/config/common/common-docker.yml,file:/config/config/doi-service/doi-service.yml"
               override="false"/>

    <Parameter name="appName"
               value="doi-service"
               override="false"/>
    <Parameter name="grails.serverURL"
               value="http://la-flanders.org/doi-service"
               override="false"/>
    <Parameter name="server.servlet.contextPath"
               value="/doi-service"
               override="false"/>

    <!-- Logging config -->
    <Parameter name="logging.config"
               value="/config/config/common/logback-docker.xml"
               override="false"/>
</Context>