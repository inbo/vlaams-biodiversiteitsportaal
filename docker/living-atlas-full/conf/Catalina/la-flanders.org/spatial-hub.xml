<?xml version="1.0" encoding="UTF-8"?>
<!-- spatial-hub -->
<Context reloadable="false">

    <Parameter name="spring.config.additional-location"
               value="file:/config/config/common/common.yml,file:/config/config/common/common-docker.yml,file:/config/config/spatial-hub/spatial-hub.yml"
               override="false"/>

    <!-- Logging config -->
    <Parameter name="logging.config"
               value="/config/config/common/logback-docker.xml"
               override="false"/>
    <Parameter name="appName"
               value="spatial-hub"
               override="false"/>
    <Parameter name="grails.serverURL"
               value="http://la-flanders.org/spatial-hub"
               override="false"/>
    <Parameter name="server.servlet.contextPath"
               value="/spatial-hub"
               override="false"/>
</Context>