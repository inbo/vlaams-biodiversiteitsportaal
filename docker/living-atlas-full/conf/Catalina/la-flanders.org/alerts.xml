<?xml version="1.0" encoding="UTF-8"?>
<!-- alerts -->
<Context reloadable="false">

    <Parameter name="spring.config.additional-location"
               value="file:/config/config/common/common.yml,file:/config/config/common/common-docker.yml,file:/config/config/alerts/alerts.yml"
               override="false"/>

    <Parameter name="appName"
               value="alerts"
               override="false"/>
    <Parameter name="grails.serverURL"
               value="http://la-flanders.org/alerts"
               override="false"/>
    <Parameter name="server.servlet.contextPath"
               value="/alerts"
               override="false"/>

    <!-- Logging config -->
    <Parameter name="logging.config"
               value="/config/config/common/logback-docker.xml"
               override="false"/>
</Context>