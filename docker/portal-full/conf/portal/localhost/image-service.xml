<?xml version="1.0" encoding="UTF-8"?>
<!-- imageservice -->
<Context reloadable="false" useHttpOnly="false">

    <Parameter name="spring.config.additional-location"
               value="file:/config/common/common.yml,file:/config/image-service/image-service.yml,${ADDITIONAL_SPRING_CONFIG_LOCATIONS}"
               override="false"/>
    <Parameter name="grails.env"
               value="${GRAILS_ENV}"
               override="false"/>

    <!-- Logging config -->
    <Parameter name="appName"
               value="%gray(image-service)"
               override="false"/>

</Context>