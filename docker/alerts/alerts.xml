<?xml version="1.0" encoding="UTF-8"?>
<!-- alerts -->
<Context reloadable="false">

    <Parameter name="spring.config.additional-location"
               value="file:/config/config/common/common.yml,file:/config/config/alerts/alerts.yml,${ADDITIONAL_SPRING_CONFIG_LOCATIONS}"
               override="false"/>


    <!-- Logging config -->
    <Parameter name="logging.config"
               value="/config/config/common/logback-docker.xml"
               override="false"/>
    <Parameter name="appName"
               value="%red(alerts)"
               override="false"/>
</Context>